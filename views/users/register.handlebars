<div class="row">
    <h3 class="center">REGISTER</h3>
    <div class="card center col s6 offset-s3">
        
        <div class="card-content">

            <form action="/users/register" method="POST">
                <div class="input-field">
                    <input name="fname" type="text" class="validate" required="required" value="{{fname}}">
                    <label for="fname">First Name</label>
                </div>

                <div class="input-field">
                    <input name="lname" type="text" class="validate" required="required" value="{{lname}}">
                    <label for="lname">Last Name</label>
                </div>

                <div class="input-field">
                    <input name="email" type="email" class="validate" required="required" value="{{email}}">
                    <label for="email">Email</label>
                </div>

                <div class="input-field">
                    <input name="password" type="password" class="validate" required="required">
                    <label for="password">Password</label>
                </div>

                <div class="input-field">
                    <input name="password2" type="password" class="validate" required="required">
                    <label for="password2">Confirm Password</label>
                </div>

                <button class="btn waves-effect waves-light indigo darken-2" type="submit">Submit</button>

            </form>

            <div class="input-field">
                <a href="/users/login" class="white black-text">Have an Account? Login</a>
            </div>

        </div>
        
    </div>
</div>